header
  width: 100%
  height: 5rem
  display: flex
  align-items: center
  position: sticky
  top: 0
  background-color: #fff
  box-shadow: 0 -1px #fff;
  z-index: 998

.nav 
  display: flex
  list-style: none
  flex-grow: 1

.nav-child
  font-size: 1.5rem
  margin-right: 2rem
  cursor: pointer
  font-family: 'Noto Sans SC', sans-serif

.nav-child a
  color: #000
  text-decoration: none
.nav-child a:visited
  color: #000
.nav-child a:hover
  color: rgb(45, 136, 233)


.theme-switcher
  width: 5rem
  height: 5rem
  font-size: 4rem
  display: flex
  line-height: 4.6rem
  justify-content: center
  cursor: pointer
