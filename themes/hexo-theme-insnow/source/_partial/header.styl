header
  width: 100%
  height: 5rem
  display: flex
  align-items: center
  position: sticky
  top: 0
  background-color: var(--bgColor)
  box-shadow: 0 -1px var(--bgColor);
  z-index: 998
  transition-property: background-color,color,box-shadow
  transition-duration: 0.5s

.nav 
  display: flex
  list-style: none
  flex-grow: 1

.nav-child
  font-size: 1.5rem
  margin-right: 2rem
  cursor: pointer
  font-family: 'Noto Sans SC', sans-serif

.nav-child a
  color: var(--fontColor)
  text-decoration: none
.nav-child a:visited
  color: var(--fontColor)
.nav-child a:hover
  color: var(--linkColor)


.theme-switcher
  width: 5rem
  height: 5rem
  font-size: 4rem
  display: flex
  line-height: 4.6rem
  justify-content: center
  cursor: pointer
  overflow: hidden
